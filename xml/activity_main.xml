<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:layout_marginTop="45sp"
        android:layout_marginBottom="15sp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cake" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/annie_use_your_telescope"
        android:text=" Congratulations, everything"
        android:textColor="#474747"
        android:textSize="33sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/wedding"
        android:layout_width="184dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="#4BFFFFFF"
        android:fontFamily="@font/jal"
        android:onClick="moveWedding"
        android:text="결혼 축하해"
        android:textColor="#83495D"
        android:textSize="20sp" />

    <Button
        android:id="@+id/birthday"
        android:layout_width="184dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="#4BFFFFFF"
        android:fontFamily="@font/jal"
        android:onClick="moveBirthday"
        android:text="생일 축하해"
        android:textColor="#83495D"
        android:textSize="20sp" />

    <Button
        android:id="@+id/celander"
        android:layout_width="184dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="#4BFFFFFF"
        android:fontFamily="@font/jal"
        android:onClick="moveCalender"
        android:text="달력"
        android:textColor="#83495D"
        android:textSize="20sp" />

</LinearLayout>